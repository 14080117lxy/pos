#include<iostream>
#include<string>
#include<fstream>
#include<math.h>
using namespace std;
#define MAX 100

//商品类
//
class Good
{
	friend class UI2;
	friend class Shop;
	friend class List;
	friend class UI;
protected:
	int code;                                      //商品编号
	float price;                                    //商品单价
	float discount = 1;                                //商品折扣
	string name;                                     //商品名称
	string unit;                                        //商品单位
	int number;									//商品数量
public:
	Good(float price, string name, string unit, int code, int number)                            //商品初始化，需要参数：商品折扣，名称，价格，编号
	{
		this->price = price;
		this->name = name;
		this->unit = unit;
		this->code = code;
		this->number = number;
	}
	Good()
	{
		float price = 0;
		this->name = '0';
		this->unit = '0';
		this->code = 0;
		number = 0;
	}
	void Changediscount(float discount)                                  //更改商品折扣，需要参数：折扣
	{
		this->discount = discount;
	}
};

//商店类
//
class Shop
{
	friend class UI2;
	friend class List;
	friend class UI;
protected:
	Good good[MAX];                           //定义商店内的商品.
	int GoodNumber;                                //商品种类
public:
	Shop()
	{
		ifstream b("商店.txt", ios::in);
		if (!b)
		{
			cout << "cannot open input file.\n";
			exit(0);
		}
		b >> GoodNumber;
		for (int i = 0; i < GoodNumber; i++)
		{
			b >> good[i].code;
			b >> good[i].name;
			b >> good[i].discount;
			b >> good[i].price;
			b >> good[i].unit;
		}
	}
	int* ReadFile()
	{
		int numbwe;		//商品总个数
		int a = 0;
		int *c = new int[100];	//每种商品数量
		for (int i = 0; i < 100; i++)
		{
			c[i] = 0;
		}
		ifstream b("账单读取.txt", ios::in);
		if (!b)
		{
			cout << "cannot open input file.\n";
			exit(0);
		}
		b >> numbwe;

		for (int i = 0; i < numbwe; i++)
		{
			b >> a;
			for (int j = 0; j < GoodNumber; j++)
			{
				if (good[j].code == a)
				{
					c[j + 1]++;
					break;
				}
			}
		}
		return c;
	}
	void Changenumber(int i, int num)
	{
		good[i].number = num;
	}
};
//用户界面类
//功能：用户界面，购买界面
class UI{
	friend class List;
private:
	int CodeList[MAX];
	int Num;		//记录总的商品数
public:
	UI(int Num, int CodeList[MAX]){
		this->Num = Num;
		this->CodeList[MAX] = CodeList[MAX];
	}
	UI(){
		Num = 0;
		CodeList[MAX] = { 0 };
	}
	void Menu(){
		cout << "1、输入购买" << endl;
		cout << "2、表单购买" << endl;
		cout << "3、账单" << endl;
		cout << "0、退出" << endl;
		cout << "请选择：";
	}
	void Purchase(Shop* s){
		int code = 0;
		int number = 0;	//购买单个商品的数量
		char c;
		do{
			cout << "请输入商品号：";
			cin >> code;
			cout << "请输入购买数量：";
			cin >> number;
			int i = 0;
			do{
				if (code == s->good[i].code){
					for (int j = 1; j <= Num; j++){	//检查是否已经录入过该商品
						if (code == CodeList[j]){
							number = number + s->good[i].number;
							Num--;
							break;
						}
					}
					s->Changenumber(i, number);		//更改商品的数量
					Num++;					//增加商品种类数量	
					CodeList[Num] = code;		//成功找到，记录商品号
					break;
				}
				i++;
			} while (i<MAX);
			if (i == MAX){
				cout << "未找到商品" << endl;
			}
			cout << "是否继续？（y/n）";
			cin >> c;
		} while (c == 'y');
	}
	void Purchase1(Shop *s){		//当用表单进行购买
		int code = 1;
		int number = 0;
		int *c = s->ReadFile();
		do{
			if (c[code] != 0){
				number = c[code];
				s->Changenumber(code-1, number);		//更改商品的数量
				Num++;					//增加商品种类数量	
				CodeList[Num] = code;		//成功找到，记录商品号
			}
			code++;
		} while (code<MAX);
	}
};

//账单类
//功能：计算总额；打印账单
class List{
private:
	float price[MAX];
	float waste[MAX];
public:
	List(){
		price[MAX] = { 0 };
	}
	float Count(int n, float p, float d){	//计算小计
		float count = 0;
		count = n*p*d;		//将数量与单价相乘,并与折扣相乘
		return count;
	}
	float CountAll(int Num){	//计算总价
		float count = 0;
		for (int n = 0; n < Num; n++){
			count = count + price[n];		//将每个小计相加
		}
		return count;
	}
	float Waste(int n, float p, float d){	//节省计算
		float waste = 0;
		waste = n*p*(1 - d);
		return waste;
	}
	float WasteAll(int Num){		//节省汇总
		float count = 0;
		for (int n = 0; n < Num; n++){
			count = count + waste[n];
		}
		return count;
	}
	void print(Shop s, UI u){		//打印账单
		for (int n = 0; n < u.Num; n++){
			int i = 0;
			do{
				if (u.CodeList[n + 1] == s.good[i].code){
					cout << "***商品购物清单***" << endl;
					cout << "名称：" << s.good[i].name << "，";
					cout << "数量：" << s.good[i].number << s.good[i].unit << "，";
					cout << "单价：" << s.good[i].price << "，";
					cout << "小计：" << Count(s.good[i].number, s.good[i].price, s.good[i].discount) << endl;
					cout << "------------------" << endl;
					price[n] = Count(s.good[i].number, s.good[i].price, s.good[i].discount);
					waste[n] = Waste(s.good[i].number, s.good[i].price, s.good[i].discount);
				}
				i++;
			} while (i < MAX);
		}
		cout << "总计:" << CountAll(u.Num) << endl;
		cout << "节省:" << WasteAll(u.Num) << endl;
	}
};

class UI2
{
public:
	void Menu(Shop *a)
	{

		int b = 0;
		do{
			system("cls");
			cout << "进入管理员界面。" << endl << endl;
			cout << "1、更改折扣" << endl;
			cout << "2、更改优惠" << endl;
			cout << "0、退出" << endl;
			cout << "请选择：";
			cin >> b;
			if (b == 1){
				Changediscount(a);
			}
			if (b == 2){
				//ChangeSave();
			}
		} while (b != 0);
	}
	void Changediscount(Shop* a)                                  //更改商品折扣，需要参数：折扣
	{
		int cod = 0;
		float discount = 0;                                  //商品编号，修改折扣
		char d = '0';
		do{
			system("cls");
			display(*a);
			cout << "输入商品编号" << endl;
			cin >> cod;
			cout << "以及更改的折扣进行修改" << endl;
			cin >> discount;
			if (cod >= a->GoodNumber || discount > 1)
			{
				cout << "更改失败，是否继续修改（Y or N）" << endl;
				cin >> d;
			}
			else
			{
				a->good[cod - 1].Changediscount(discount);
				cout << "更改成功，是否继续修改(Y or N)" << endl;
				cin >> d;
			}
		} while (d != 'n'&&d != 'N');
	}
	void ChangeSave(Shop *s)		//买二赠一
	{
		int n = 0;
		//float discount = 0;                                  
		char d = '0';
		do{
			system("cls");
			//display(*a);
			cout << "输入商品编号" << endl;
			cin >> n;
			if (n >= s->GoodNumber)
			{
				cout << "更改失败，是否继续修改（Y or N）" << endl;
				cin >> d;
			}
			else
			{
				s->good[n - 1].discount = 1;
				cout << "更改成功，是否继续修改(Y or N)" << endl;
				cin >> d;
			}
		} while (d != 'n'&&d != 'N');
		;
	}
	void display(Shop a)
	{
		cout << "编号   名称    单位    单价   折扣" << endl;
		for (int i = 0; i < a.GoodNumber; i++)
		{
			cout << "  " << a.good[i].code;
			cout << "    " << a.good[i].name;
			cout << "     " << a.good[i].unit;
			cout << "     " << a.good[i].price;
			cout << "      " << a.good[i].discount << endl;
		}
	}
};

void main(){
	Shop a;
	UI u;
	List l;
	UI2 c;
	c.Menu(&a);
	int b = 0;
	do{
		u.Menu();
		cin >> b;
		if (b == 1){
			u.Purchase(&a);
		}
		if (b == 2){
			u.Purchase1(&a);
		}
		if (b == 3){
			l.print(a, u);
		}
	} while (b != 0);
}
